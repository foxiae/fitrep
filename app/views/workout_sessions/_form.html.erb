    <!--Overall Workout Information -->
    <div class="row">
      <div class="col-md-4">
        <h3 class="lead">Overall Workout Information</h3>
        <%= f.inputs do %>
          <%= f.input :workout_focus, :label => "Focus" %>
          <%= f.input :workout_time, :label => "Overall Time"%>
          <%= f.input :workout_intensity, :label => "Intensity" %>
          <%= f.input :workout_notes, :label => "Notes" %>
        <% end %>
      </div>

    <!-- Exercises -->
      <div class="col-md-8">
        <h3 class="lead">Add Exercise</h3>
          <div id='exercises'>
            <%= f.semantic_fields_for :exercises do |exercise| %>
              <%= render 'exercise_fields', :f => exercise %>
            <% end %>
            <div class='links'>
              <%= link_to_add_association 'add', f, :exercises %>
            </div>
          </div>
      </div>
    </div>


  <center>
      <%= f.action :submit, :button_html => { :value => 'Submit' } %> <br>
      <%= f.action :cancel, :button_html => { :value =>  'Cancel' } %>
  </center>
  <hr>
<% end %>
