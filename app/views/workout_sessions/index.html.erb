<nav class="navbar navbar-default">
  <div class="container">
    <p class="navbar-text">fitrep</p>
    <%= link_to "Create New Workout", new_workout_session_path, class: "new_workout_session btn btn-success navbar-btn navbar-right" %>
  </div>
</nav>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-2">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation" class="active"><a href="#"> Dashboard </a></li>
        <li role="presentation"><a href="#"> Reports </a></li>
        <li role="presentation"><a href="#"> Other Future Fancy Stuff </a></li>
      </ul>
    </div>

    <div class="col-md-8 col-md-offset-1">
      <h2 class="lead"><b>Workout Satistics</b></h2>
        <ul>
          <li>Average Workout Time</li>
          <li>Last Workout Focus</li>
          <li>Personal Records</li>
        </ul>
      <hr>
      <h2 class="lead"><b>Past Workouts</b></h2>
      <div class="row-fluid">
        <% @workout_sessions.each do |workout_session| %>
          <div class="btn-group btn-lg btn-block">
              <div class="col-md-7 col-md-offset-1">
                <%= link_to "Workout Focus: " + workout_session.workout_focus, workout_session_path(workout_session), class: "btn btn-block btn-lg list-group-item" %>
              </div>
              <div class="btn-group col-md-1">
                <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li class="dropdown-header">Brief Summary:</li>
                  <li class="dropdown-item"><p>Workout Time: <%= workout_session.workout_time %></p></li>
                  <li class="dropdown-item"><p>Workout Intensity: <%= workout_session.workout_time %></p></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Edit</a></li>
                </ul>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
